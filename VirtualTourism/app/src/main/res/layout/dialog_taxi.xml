<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    >
    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close_black_24dp"
        android:layout_alignParentRight="true"
        android:elevation="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="7dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        app:cardBackgroundColor="@color/topbar"
        app:cardCornerRadius="15dp"
        android:id="@+id/card">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/topbar"
            android:padding="20dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/imgv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/taxi8"
                android:elevation="1dp"
                android:layout_centerHorizontal="true"/>
            <EditText
                android:id="@+id/car_model"
                android:layout_width="350dp"
                android:layout_height="40sp"
                android:hint="Car Model"
                android:layout_marginTop="20dp"
                android:layout_below="@id/imgv"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:background="@drawable/mine"/>
            <EditText
                android:id="@+id/car_number"
                android:layout_below="@id/car_model"
                android:layout_marginTop="4dp"
                android:layout_width="350dp"
                android:layout_height="40sp"
                android:background="@drawable/mine"
                android:hint="Car Number"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/tv1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/car_number"
                android:layout_marginTop="10dp"
                android:text="Drivers License  :"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b1"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_below="@+id/car_number"
                android:layout_marginTop="19dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/mine"
                android:text="Choose"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                android:layout_marginTop="15dp"
                android:text="RC book               :"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/b2"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_below="@+id/b1"
                android:layout_marginTop="21dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/mine"
                android:text="Choose"
                android:textColor="@color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="save"
                android:id="@+id/save"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv2"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>